<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorAccent"
    android:orientation="vertical"
    tools:context=".CreatePost">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee_inline"
                android:gravity="center_horizontal"
                android:text="Create a Post"
                android:textSize="25sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/create_post_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="3dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:cardBackgroundColor="?attr/colorAccent"
                app:cardCornerRadius="5dp"
                app:layout_constraintBottom_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bungee_inline"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="Full Name"
                        android:textSize="18sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtPostTitle"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="Title of Post"
                        android:paddingBottom="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/Early_Dawn"
                            android:inputType="text"
                            android:paddingBottom="10dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtPostDescription"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="Description"
                        android:paddingBottom="5dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@color/Early_Dawn"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:paddingBottom="10dp"
                            android:transitionName="transUsername" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnSelectPostTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/bungee_inline"
                        android:paddingLeft="14dp"
                        android:paddingTop="2dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="2dp"
                        android:text="select tag"
                        android:textSize="15sp"
                        app:cornerRadius="20dp"
                        app:icon="@drawable/add" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/tagGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:chipSpacingVertical="6dp">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/postTagAndroid"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="15dp"
                                android:text="Android"
                                android:textAllCaps="true"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                android:visibility="gone"
                                app:checkedIconEnabled="true"
                                app:chipMinHeight="40dp"
                                app:textEndPadding="15dp"
                                app:textStartPadding="15dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/postTagDb"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="15dp"
                                android:text="Database"
                                android:textAllCaps="true"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                android:visibility="gone"
                                app:checkedIconEnabled="true"
                                app:chipMinHeight="40dp"
                                app:textEndPadding="15dp"
                                app:textStartPadding="15dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/postTagIphone"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="15dp"
                                android:text="Iphone"
                                android:textAllCaps="true"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                android:visibility="gone"
                                app:checkedIconEnabled="true"
                                app:chipMinHeight="40dp"
                                app:textEndPadding="15dp"
                                app:textStartPadding="15dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/postTagPf"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="15dp"
                                android:text="Programming Fundamentals"
                                android:textAllCaps="true"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                android:visibility="gone"
                                app:checkedIconEnabled="true"
                                app:chipMinHeight="40dp"
                                app:textEndPadding="15dp"
                                app:textStartPadding="15dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/postTagOop"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="15dp"
                                android:text="Object Oriented Programming"
                                android:textAllCaps="true"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                android:visibility="gone"
                                app:checkedIconEnabled="true"
                                app:chipMinHeight="40dp"
                                app:textEndPadding="15dp"
                                app:textStartPadding="15dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/postTagGame"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="15dp"
                                android:text="Game Development"
                                android:textAllCaps="true"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                android:visibility="gone"
                                app:checkedIconEnabled="true"
                                app:chipMinHeight="40dp"
                                app:textEndPadding="15dp"
                                app:textStartPadding="15dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/postTagDsa"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="15dp"
                                android:text="Data Structures"
                                android:textAllCaps="true"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                android:visibility="gone"
                                app:checkedIconEnabled="true"
                                app:chipMinHeight="40dp"
                                app:textEndPadding="15dp"
                                app:textStartPadding="15dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/postTagItc"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="15dp"
                                android:text="Introduction to Computing"
                                android:textAllCaps="true"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                android:visibility="gone"
                                app:checkedIconEnabled="true"
                                app:chipMinHeight="40dp"
                                app:textEndPadding="15dp"
                                app:textStartPadding="15dp" />


                        </com.google.android.material.chip.ChipGroup>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#27366A"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="post"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
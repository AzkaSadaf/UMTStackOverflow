<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorAccent"
    android:orientation="vertical"
    tools:context=".ProfileFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/profile" />

            <Spinner
                android:id="@+id/spLogOut"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/logout"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivLogOut"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/logout" />

            <TextView
                android:id="@+id/tvFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/imageView2"
                android:fontFamily="@font/cagliostro"
                android:gravity="center_vertical"
                android:text="Full Name"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvFullName"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imageView2"
                android:fontFamily="@font/cagliostro"
                android:gravity="center_vertical"
                android:text="Username"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/labelEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView2"
                android:layout_marginTop="20dp"
                android:text="Email" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilLockEmail"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/labelEmail"
                app:boxBackgroundMode="filled">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_google_signin_btn_text_light_disabled"
                    android:editable="false"
                    android:gravity="center_vertical"
                    android:text="Email" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tilLockEmail"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:fontFamily="@font/cagliostro"
                    android:gravity="center_vertical"
                    android:text="CHANGE PASSWORD"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/edit" />
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/labelNewPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LinearLayoutH"
                android:layout_marginTop="10dp"
                android:text="New Password" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEnterNewPassword"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/labelNewPass"
                app:boxBackgroundColor="@color/common_google_signin_btn_text_light_disabled"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/labelConfirmPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tilEnterNewPassword"
                android:layout_marginTop="10dp"
                android:text="Confirm New Password" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilConfirmNewPassword"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/labelConfirmPass"
                app:boxBackgroundColor="@color/common_google_signin_btn_text_light_disabled"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnAddMoreTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tilConfirmNewPassword"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/Spring_Wood"
                android:fontFamily="@font/cagliostro"
                android:text="Add More Fields"
                android:textColor="@color/black"
                app:cornerRadius="20dp"
                app:strokeColor="@color/Matterhorn"
                app:strokeWidth="0.5dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/tagGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnAddMoreTags"
                android:layout_marginTop="10dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/tagAndroid"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android"
                    android:textAllCaps="true"
                    android:visibility="visible"
                    app:chipMinHeight="36dp"
                    app:closeIconVisible="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tagDb"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Database"
                    android:textAllCaps="true"
                    android:visibility="visible"
                    app:chipMinHeight="36dp"
                    app:closeIconVisible="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tagIphone"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iphone"
                    android:textAllCaps="true"
                    android:visibility="visible"
                    app:chipMinHeight="36dp"
                    app:closeIconVisible="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tagPf"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programming Fundamentals"
                    android:textAllCaps="true"
                    android:visibility="visible"
                    app:chipMinHeight="36dp"
                    app:closeIconVisible="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tagOop"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Object Oriented Programming"
                    android:textAllCaps="true"
                    android:visibility="visible"
                    app:chipMinHeight="36dp"
                    app:closeIconVisible="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tagGame"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game Development"
                    android:textAllCaps="true"
                    android:visibility="visible"
                    app:chipMinHeight="36dp"
                    app:closeIconVisible="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tagDsa"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Structures"
                    android:textAllCaps="true"
                    android:visibility="visible"
                    app:chipMinHeight="36dp"
                    app:closeIconVisible="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tagItc"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Introduction to Computing"
                    android:textAllCaps="true"
                    android:visibility="visible"
                    app:chipMinHeight="36dp"
                    app:closeIconVisible="true" />

            </com.google.android.material.chip.ChipGroup>

            <Button
                android:id="@+id/btnDoneEditing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tagGroup"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:fontFamily="@font/cagliostro"
                android:text="done"
                android:textStyle="bold" />

        </RelativeLayout>

    </ScrollView>


</LinearLayout>